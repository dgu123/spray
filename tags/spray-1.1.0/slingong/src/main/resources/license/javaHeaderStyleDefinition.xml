<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE additionalHeaders>
<additionalHeaders>
    <for_java_source>
		<!-- Alternative to default javadoc_style definition in 
			com.google.code.maven-license-plugin:maven-license-plugin to use non-formal JavaDoc comment 
			to append license since the default one speciies to use formal JavaDoc comment. -->
        <firstLine>/*</firstLine>
        <beforeEachLine> * </beforeEachLine>
        <endLine> */</endLine>
        <!--skipLine></skipLine-->
        <firstLineDetectionPattern>(\s|\t)*/\*.*$</firstLineDetectionPattern>
        <lastLineDetectionPattern>.*\*/(\s|\t)*$</lastLineDetectionPattern>
    </for_java_source>
</additionalHeaders>